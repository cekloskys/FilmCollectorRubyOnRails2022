<h1>Delete <%= @movie.title %></h1>
<form action="/movies/<%= @movie.id %>" method="post">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<div class="form-group">
		<label>Title:</label>
		<input type="text" name="movie[title]" value="<%= @movie.title %>" disabled class="form-control">
	</div>
	<div class="form-group">
		<label>Duration:</label>
		<input type="text" name="movie[duration]" value="<%= @movie.duration %>" disabled class="form-control">
	</div>
	<div class="form-group">
		<label>Rating:</label>
		<input type="text" name="movie[rating]" value="<%= @movie.rating %>" disabled class="form-control">
	</div>
	<div class="form-group">
		<label>Release Date:</label>
		<input type="text" name="movie[release_date]" value="<%= @movie.release_date %>" disabled class="form-control">
	</div>
	<input type="submit" value="Delete" class="btn btn-primary">
</form>